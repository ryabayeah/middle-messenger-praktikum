{{#> ProfileLayout backPath='/profile'}}
<div class="change-password__container">
    {{#> FormAuth
    caption="Смена пароля"
    textSubmit="Сохранить"
    textAlt="Отмена"
    }}
    {{> Input
    id='old_password'
    label='Старый пароль'
    name='old_password'
    value=old_password
    type='password'
    }}

    {{> Input
    id='new_password'
    label='Новый пароль'
    name='password'
    value=new_password
    type='password'
    isInvalid=true
    }}

    {{> Input
    id='repeat_new_password'
    label='Повторите новый пароль'
    name='repeat_new_password'
    value=repeat_new_password
    type='password'
    isInvalid=true
    feedback='Пароли не совпадают'
    }}
    {{/FormAuth}}
</div>
{{/ProfileLayout}}